{
  "name": "react-todo",
  "displayName": "react-todo-vscode-extension",
  "description": "A VsCode ToDo extension using React Vite",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "group": "Todo@1",
          "command": "react-todo.addTodoSelection",
          "when": "editorIsOpen && editorHasSelection"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        { 
          "id": "react-todo-sideBar",
          "title": "ToDo List",
          "icon": "src/media/tasklist.svg"
        }
      ]
    },
    "views": {
      "react-todo-sideBar": [
        {
          "type": "webview",
          "id": "react-todo-sideBar-view",
          "name": "ToDo List",
          "icon": "src/media/tasklist.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "react-todo.ToDo",
        "title": "ToDo List",
        "category": "ToDo"
      },
      {
        "command": "react-todo.addTodoSelection",
        "title": "Create Todo By Selection",
        "category": "ToDo"
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "dev:webview": "cd webview-ui && npm run dev",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
